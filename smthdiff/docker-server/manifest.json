{
  "copy-from-recipe": {
    "assets/.docker": "/.docker",
    "assets/docker-compose.yml": "/docker-compose.yml"
  },
  "env": {
    "PROJECT_ROOT": "/var/www/html",
    "DOC_ROOT": "/var/www/html/public",
    "NGINX_PORT_HOST": "80",
    "APACHE_PORT_HOST": "7080",
